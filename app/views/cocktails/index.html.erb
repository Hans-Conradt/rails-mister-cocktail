<div class="container">

  <h1>Cocktails</h1>
<div class="cards" style="grid-template-columns: 1fr 1fr 1fr 1fr; display: grid; grid-gap: 16px;">
  <% @cocktails.each do |cocktail| %>



  <div class="card" style="width: 18rem;">
    <img src="https://images.unsplash.com/photo-1501594941583-afe28dd654b4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjU2MDh9&auto=format&fit=crop&w=700&q=60" class="card-img-top" alt="">

    <div class="card-body">
      <h5 class="card-title"> <%= cocktail.name %></h5>
    </div>

    <div class="card-body">
      <%= link_to "show", cocktail_path(cocktail) %>
    </div>
  </div>

  <% end %>
</div>
  <%= link_to "ADD Cocktail", new_cocktail_path %>

</div>
