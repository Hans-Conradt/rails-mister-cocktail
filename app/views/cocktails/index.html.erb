<div class="container" width="100%">

  <h1>Cocktails</h1>
  <%= cl_image_tag("bridge",
      width: 400, height: 300, crop: :fill) %>
<div class="cards" style="grid-template-columns: 1fr 1fr 1fr 1fr; display: grid; grid-gap: 16px;">
  <% @cocktails.each do |cocktail| %>

  <div class="card" style="width: 18rem;">
  <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill, class: "card-img-top"%>

    <div class="card-body">
      <h5 class="card-title"> <%= cocktail.name %></h5>
    </div>

    <div class="card-body">
      <%= link_to "show", cocktail_path(cocktail) %>
    </div>
  </div>

  <% end %>
</div>
  <%= link_to "ADD Cocktail", new_cocktail_path %>

</div>
