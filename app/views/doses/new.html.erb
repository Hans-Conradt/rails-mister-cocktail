<div class="container">
  <h1>New Ingredient</h1>

  <% if @dose.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.text_field :description %>

  <%= f.submit "submit" %>
  <% end %>
</div>
